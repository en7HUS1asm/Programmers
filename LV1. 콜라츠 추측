#Sol 1
def solution(num):
    answer=-1
    cnt = 0
    if answer==1:
        return 0
    else:
        for i in range (500):
            if num%2==0:
                num = num//2
            else:
                num = num*3+1
                
            if num==1:
                answer= i+1
                break;
    return answer
