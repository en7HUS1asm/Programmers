# Sol1

def solution(n):
    answer = 0
    if n % 2 ==0:
        answer = (n/2)**2+(n/2)
    else:
        answer = ((n-1)//2)**2+((n-1)/2)
    return answer

# Sol2

def solution(n):
    answer = 0
    for i in range(2, n+1, 2):
        answer += i
    return answer

# Sol3

def solution(n):
    return sum(range(0, n+1, 2))
